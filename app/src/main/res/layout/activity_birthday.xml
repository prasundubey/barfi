<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activity.Birthday">

    <LinearLayout
        android:id="@+id/ll0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/steps_info1_account"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:paddingEnd="80dp"
            android:paddingStart="20dp"
            android:text="Confirm your date of birth"
            android:textColor="@color/colorTitleDark"
            android:textSize="40sp"
            />

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:paddingEnd="40dp"
            android:paddingStart="20dp"
            android:text="Your date of birth cannot be changed once confirmed."
            android:textColor="@color/colorGrayDark7f"
            android:textSize="12sp"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10sp"
            android:text="Date of Birth:"
            android:textColor="@color/colorGray"
            android:textStyle="normal"
            android:textSize="14sp"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:hint="Select Date"
            android:background="@drawable/bg_box_edit_border"
            android:drawableRight="@drawable/ic_calendar"
            android:drawableTint="@color/colorPrimaryDark"
            android:id="@+id/birthday"
            android:textSize="16sp"
            android:textColor="@color/colorGray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:fitsSystemWindows="false"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true">

        <Button
            android:enabled="false"
            android:background="@drawable/bg_button_selector"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Confirm"
            android:textColor="@android:color/white"
            />
    </LinearLayout>



</RelativeLayout>