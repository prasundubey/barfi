<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fefefe"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineProvider="bounds"
        android:clipToPadding="false"
        android:orientation="vertical"
        >

        <ImageView
            android:src="@mipmap/ic_user_default"
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:contentDescription="@string/profile_image" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="20sp"
            android:text="@string/name"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/job"
            android:drawableStart="@drawable/i_work"
            android:drawablePadding="10sp"
            android:text="@string/job"
            android:paddingStart="20dp"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="@color/colorGray"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:drawablePadding="10sp"
            android:drawableStart="@drawable/ic_school"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:text="@string/school_college"
            android:textColor="@color/colorGray"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/city"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="10sp"
            android:text="Current Location"
            android:layout_gravity="bottom"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:padding="5dp"
            android:textColor="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            />

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGrayLight"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_gravity="bottom"
            android:gravity="start"
            android:id="@+id/about"
            android:text="@string/about"
            android:textSize="18sp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:textColor="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGrayLight"
            android:layout_marginBottom="10dp"/>



        <com.nex3z.flowlayout.FlowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flChildSpacing="5dp"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="10dp"
            android:layout_marginBottom="20dp"
            >


            <TextView
                android:id="@+id/homeTown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/textbox_filled_color"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/xyz"
                android:gravity="center"

                android:fontFamily="@font/helvetica_neue_regular"
                android:padding="5sp"
                android:paddingEnd="10dp"
                android:text="Home town"
                android:textColor="@color/colorGray"
                android:textSize="12sp" />





            <TextView
                android:id="@+id/degree"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/ic_school"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:drawableTint="@color/colorPrimary"
                android:textSize="12sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/status"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_status"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/religion"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_religion"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/height"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_height"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/zodiac"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_zodiac"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/drinking"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_drinking"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/smoking"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_smoking"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/exercise"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_exercise"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/pets"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_pet"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/kids"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_kids"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/diet"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_diet"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/politics"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_politics"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/reading"
                android:background="@drawable/textbox_filled_color"
                android:drawableStart="@drawable/i_reading"
                android:drawablePadding="10dp"
                android:text="@string/degree"
                android:textSize="14sp"
                android:padding="10sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>





        </com.nex3z.flowlayout.FlowLayout>







        <ImageView
            android:src="@mipmap/ic_user_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image1"
            android:scaleType="fitCenter"
            android:contentDescription="@string/profile_image" />
        <ImageView
            android:src="@mipmap/ic_user_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image3"
            android:scaleType="fitCenter"
            android:contentDescription="@string/profile_image" />



        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30sp"
            android:visibility="visible">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                app:borderWidth="0dp"
                android:id="@+id/fabNope"
                android:layout_margin="10sp"
                android:backgroundTint="@color/colorWhite"
                android:elevation="2sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nope"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabLike"
                app:borderWidth="0dp"
                android:layout_margin="10sp"
                android:backgroundTint="@color/colorWhite"
                android:elevation="2sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:fitsSystemWindows="false"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="30dp"
            >

            <Button
                android:background="@drawable/button_grad"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/edit_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:padding="10sp"
                android:text="Edit Profile"
                android:textColor="@android:color/white"
                />
        </LinearLayout>


    </LinearLayout>



</ScrollView>
